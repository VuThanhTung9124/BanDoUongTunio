<div class="page-header">
    <div class="page-title">Quản lý tài khoản</div>

    @using (Html.BeginForm("Index", "TAI_KHOAN", FormMethod.Get))
    {
        <div class="header-search">
            <input type="text"
                   name="searchTK"
                   value="@ViewBag.SearchTK"
                   placeholder="Tìm theo email hoặc SĐT..." />
            <button type="submit">Tìm kiếm</button>
        </div>
    }
</div>

<br />
@{
    int currentPage = Model.PageNumber;
    int totalPage = Model.PageCount;

    int blockStart;

    if (currentPage <= 2)
    {
        blockStart = 1;
    }
    else
    {
        blockStart = ((currentPage - 1) / 2) * 2 + 1;
    }

    int blockEnd = Math.Min(blockStart + 2, totalPage);
}
<div class="pagination-top">

    <ul class="pagination">

        <!-- ⏮ ĐẦU -->
        <li class="@(currentPage == 1 ? "disabled" : "")">
            <a href="@Url.Action("Index", new {
                page = 1,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">Đầu</a>
        </li>

        <!-- 🔢 3 NÚT GIỮA -->
        @for (int i = blockStart; i <= blockEnd; i++)
        {
            if (i == currentPage)
            {
                <li class="active">
                    <span>@i</span>
                </li>
            }
            else
            {
                <li>
                    <a href="@Url.Action("Index", new {
                page = i,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">@i</a>
        </li>
    }
}


        <!-- ⏭ CUỐI -->
        <li class="@(currentPage == totalPage ? "disabled" : "")">
            <a href="@Url.Action("Index", new {
                page = totalPage,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">Cuối</a>
        </li>

    </ul>
</div>


<!-- TABLE -->
<div class="card-table">
    <table>
        <thead>
            <tr>
                <th style="width:70px;" class="text-center">STT</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th style="width:180px;" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = (Model.PageNumber - 1) * Model.PageSize + 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@stt</td>
                    <td>@item.ho_ten</td>
                    <td>@item.email</td>
                    <td>@item.so_dien_thoai</td>
                    <td class="action-buttons text-center">
                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn-delete">Xóa</a>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>
