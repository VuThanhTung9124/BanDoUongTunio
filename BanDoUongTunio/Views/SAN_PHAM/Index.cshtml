    int totalPage = Model.PageCount;

    int blockStart;

    if (currentPage <= 2)
    {
        blockStart = 1;
    }
    else
    {
        blockStart = ((currentPage - 1) / 2) * 2 + 1;
    }

    int blockEnd = Math.Min(blockStart + 2, totalPage);
}
<div class="pagination-top">

    <ul class="pagination">

        <!-- ⏮ ĐẦU -->
        <li class="@(currentPage == 1 ? "disabled" : "")">
            <a href="@Url.Action("Index", new {
                page = 1,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">Đầu</a>
        </li>

        <!-- 🔢 3 NÚT GIỮA -->
        @for (int i = blockStart; i <= blockEnd; i++)
        {
            if (i == currentPage)
            {
                <li class="active">
                    <span>@i</span>
                </li>
            }
            else
            {
                <li>
                    <a href="@Url.Action("Index", new {
                page = i,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">@i</a>
        </li>
    }
}


        <!-- ⏭ CUỐI -->
        <li class="@(currentPage == totalPage ? "disabled" : "")">
            <a href="@Url.Action("Index", new {
                page = totalPage,
                searchSP = ViewBag.SearchSP,
                sortPrice = ViewBag.SortPrice
            })">Cuối</a>
        </li>

    </ul>
</div>
<!-- TABLE -->
<div class="card-table">

    <!-- SORT BAR -->
    @using (Html.BeginForm("Index", "SAN_PHAM", FormMethod.Get))
    {
        <!-- giữ search khi sort -->
        <input type="hidden" name="searchSP" value="@ViewBag.SearchSP" />

        <div style="display:flex; justify-content:flex-end; margin-bottom:16px;">
            <select name="sortPrice"
                    onchange="this.form.submit()"
                    style="padding:10px 14px;
                           border-radius:10px;
                           border:1px solid #e5e7eb;
                           font-weight:600;
                           min-width:180px;">
                <option value="" @(ViewBag.SortPrice == null ? "selected" : "")>
                    Sắp xếp: Mặc định
                </option>
                <option value="asc" @(ViewBag.SortPrice == "asc" ? "selected" : "")>
                    Giá tăng dần
                </option>
                <option value="desc" @(ViewBag.SortPrice == "desc" ? "selected" : "")>
                    Giá giảm dần
                </option>
            </select>
        </div>
    }

    <!-- TABLE -->
    <table>
        <thead>
            <tr>
                <th style="width:70px;" class="text-center">STT</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th class="text-center">Hình ảnh</th>
                <th>Giá cơ bản</th>
                <th style="width:180px;" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = (Model.PageNumber - 1) * Model.PageSize + 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@stt</td>
                    <td>@item.ten_san_pham</td>
                    <td>@item.mo_ta</td>
                    <td class="text-center">

                        @{
                            string imagePath = "~/Image/Image_DoUong/" + item.hinh_anh;
                        }

                        <img src="@Url.Content(imagePath)" class="product-img" />

                    </td>
                    <td>@String.Format("{0:N0} VNĐ", item.gia_co_ban)</td>
                    <td class="action-buttons text-center">
                        <a href="@Url.Action("Edit", new { id = item.id })" class="btn-edit">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn-delete">Xóa</a>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>




