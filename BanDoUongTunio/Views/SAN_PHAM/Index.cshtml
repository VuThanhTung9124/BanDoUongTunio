@*@model IEnumerable<BanDoUongTunio.Models.SAN_PHAM>*@

@model PagedList.IPagedList<BanDoUongTunio.Models.SAN_PHAM>
@using PagedList.Mvc


@{
    ViewBag.Title = "Quản lý sản phẩm";

}

<style>

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .page-title {
        font-size: 26px;
        font-weight: 700;
        color: #111827;
    }

    .btn-add {
        background: #2563eb;
        color: #fff;
        padding: 12px 20px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
    }

        .btn-add:hover {
            background: #1d4ed8;
            color: #fff;
        }

    .card-table {
        background: #fff;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: #f9fafb;
    }

    th {
        padding: 16px;
        text-align: left;
        font-size: 17px;
        font-weight: 700;
        color: #374151;
    }

    td {
        padding: 18px 16px;
        font-size: 16px;
        color: #374151;
        border-top: 1px solid #e5e7eb;
        vertical-align: middle;
        line-height: 1.6;
    }

    tr:hover {
        background: #f9fafb;
    }

    .action-buttons a {
        margin-right: 14px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
    }

    .btn-edit {
        color: #2563eb;
    }

    .btn-delete {
        color: #ef4444;
    }

    .product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
    }

    .text-center {
        text-align: center;
    }
    /* PAGINATION FIXED BOTTOM CENTER */
    .pagination-top {
        display: flex;
        justify-content: center;
        margin-bottom: 16px;
    }


    /* pagination container */
    .pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        background: #ffffff;
        padding: 10px 16px;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        max-width: 90vw;
        overflow-x: auto;
    }

        /* bỏ scroll bar xấu */
        .pagination::-webkit-scrollbar {
            height: 4px;
        }

        .pagination::-webkit-scrollbar-thumb {
            background: #e5e7eb;
            border-radius: 4px;
        }

        /* item */
        .pagination li {
            list-style: none;
        }

            /* link & span */
            .pagination li a,
            .pagination li span {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                min-width: 36px;
                height: 36px;
                padding: 0 12px;
                border-radius: 10px;
                font-size: 14px;
                font-weight: 600;
                color: #374151;
                background: #f9fafb;
                border: 1px solid #e5e7eb;
                text-decoration: none;
                transition: all 0.2s ease;
                white-space: nowrap;
            }

                /* hover */
                .pagination li a:hover {
                    background: #2563eb;
                    color: #fff;
                    border-color: #2563eb;
                }

            /* active */
            .pagination li.active span {
                background: #2563eb;
                color: #fff;
                border-color: #2563eb;
            }

            /* disabled */
            .pagination li.disabled span {
                color: #9ca3af;
                background: #f3f4f6;
                cursor: not-allowed;
            }
</style>




<!-- HEADER -->
<div class="page-header">
    <div class="page-title">Quản lý sản phẩm</div>
    @using (Html.BeginForm("Index", "SAN_PHAM", FormMethod.Get))
    {
        <div style="margin-bottom:20px; display:flex; gap:10px; align-items:center;">

            <!-- 🔍 SEARCH -->
            <input type="text"
                   name="searchSP"
                   value="@ViewBag.SearchSP"
                   placeholder="Tìm theo tên sản phẩm..."
                   style="padding:10px 14px; width:240px; border-radius:10px; border:1px solid #e5e7eb;" />



            <!-- BUTTON -->
            <button type="submit"
                    style="padding:10px 18px; border-radius:10px; background:#2563eb; color:white; border:none; font-weight:600;">
                Tìm kiếm
            </button>
        </div>
    }

    <a href="@Url.Action("Create")" class="btn-add">
        + Thêm sản phẩm
    </a>
</div>
