@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Trang Chủ</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body class="bg-gray-50 text-gray-800">

 

    <!-- ===== MAIN ===== -->
    <main class="max-w-7xl mx-auto px-6 py-6 space-y-8">

      

        <!-- ===== NEWS / EVENT ===== -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

            <!-- Card -->
            <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
                <div class="h-32 bg-gradient-to-r from-orange-400 to-pink-500 flex items-center justify-center text-white text-lg font-semibold">
                    <i class="fa-solid fa-mug-hot text-3xl mr-2"></i>
                    Trà Sữa Trân Châu
                </div>
                <div class="p-5 space-y-3">
                    <span class="text-xs bg-orange-100 text-orange-600 px-2 py-1 rounded-full">
                        <i class="fa-solid fa-fire mr-1"></i>Sản phẩm mới · 2 giờ trước
                    </span>
                    <h3 class="font-semibold">
                        Ra mắt Trà Sữa Trân Châu Đường Đen Premium
                    </h3>
                    <p class="text-sm text-gray-600">
                        Dòng trà sữa cao cấp với trân châu đường đen handmade.
                    </p>
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>
                            <i class="fa-regular fa-heart mr-1"></i>248
                            <i class="fa-regular fa-comment ml-3 mr-1"></i>32
                        </span>
                        <a href="#" class="text-orange-500 font-medium">
                            Xem thêm <i class="fa-solid fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
                <div class="h-32 bg-gradient-to-r from-indigo-400 to-purple-500 flex items-center justify-center text-white text-lg font-semibold">
                    <i class="fa-solid fa-store text-3xl mr-2"></i>
                    Chi nhánh mới
                </div>
                <div class="p-5 space-y-3">
                    <span class="text-xs bg-indigo-100 text-indigo-600 px-2 py-1 rounded-full">
                        <i class="fa-solid fa-bullhorn mr-1"></i>Khai trương · 5 giờ trước
                    </span>
                    <h3 class="font-semibold">
                        Khai trương chi nhánh Quận 7 - Ưu đãi 30%
                    </h3>
                    <p class="text-sm text-gray-600">
                        Giảm 30% toàn bộ menu trong tuần đầu khai trương.
                    </p>
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>
                            <i class="fa-regular fa-heart mr-1"></i>512
                            <i class="fa-regular fa-comment ml-3 mr-1"></i>89
                        </span>
                        <a href="#" class="text-indigo-500 font-medium">
                            Xem thêm <i class="fa-solid fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
                <div class="h-32 bg-gradient-to-r from-green-400 to-emerald-500 flex items-center justify-center text-white text-lg font-semibold">
                    <i class="fa-solid fa-gift text-3xl mr-2"></i>
                    Khuyến mãi đặc biệt
                </div>
                <div class="p-5 space-y-3">
                    <span class="text-xs bg-green-100 text-green-600 px-2 py-1 rounded-full">
                        <i class="fa-solid fa-tags mr-1"></i>Khuyến mãi · 1 ngày trước
                    </span>
                    <h3 class="font-semibold">
                        Mua 2 Tặng 1 - Combo Sinh Tố
                    </h3>
                    <p class="text-sm text-gray-600">
                        Áp dụng cho tất cả sinh tố trái cây tươi.
                    </p>
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>
                            <i class="fa-regular fa-heart mr-1"></i>421
                            <i class="fa-regular fa-comment ml-3 mr-1"></i>67
                        </span>
                        <a href="#" class="text-green-500 font-medium">
                            Xem thêm <i class="fa-solid fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
                <div class="h-32 bg-gradient-to-r from-yellow-400 to-orange-400 flex items-center justify-center text-white text-lg font-semibold">
                    <i class="fa-solid fa-star text-3xl mr-2"></i>
                    Đánh giá 5 sao
                </div>
                <div class="p-5 space-y-3">
                    <span class="text-xs bg-yellow-100 text-yellow-600 px-2 py-1 rounded-full">
                        <i class="fa-solid fa-star mr-1"></i>Review · 2 ngày trước
                    </span>
                    <h3 class="font-semibold">
                        Tea House đạt 4.8 sao trên Google
                    </h3>
                    <p class="text-sm text-gray-600">
                        Hơn 5.000+ đánh giá tích cực từ khách hàng.
                    </p>
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>
                            <i class="fa-regular fa-heart mr-1"></i>856
                            <i class="fa-regular fa-comment ml-3 mr-1"></i>124
                        </span>
                        <a href="#" class="text-yellow-500 font-medium">
                            Xem thêm <i class="fa-solid fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>


    </main>

</body>
</html>
