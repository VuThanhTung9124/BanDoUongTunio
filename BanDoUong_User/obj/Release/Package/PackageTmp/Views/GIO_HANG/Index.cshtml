@model BanDoUong_User.Models.GIO_HANG
@{
    Layout = null;
    var selectedIds = ViewBag.SelectedIds as List<int> ?? new List<int>();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Giỏ hàng</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-gray-100 h-screen overflow-hidden">

    @using (Html.BeginForm("Index", "GIO_HANG", FormMethod.Post))
    {
        <!-- WRAPPER -->
    <div class="h-screen flex flex-col">

        <!-- HEADER -->
        <div class="bg-white shadow px-6 py-4 flex items-center gap-3">
            <h1 class="text-lg font-semibold">Giỏ hàng</h1>
        </div>

        <!-- CONTENT -->
        <div class="flex-1 overflow-y-auto px-4 py-4">

            <div class="max-w-7xl mx-auto space-y-4">

                <!-- TIẾP TỤC MUA -->
                <a href="@Url.Action("Index", "SAN_PHAM")"
                   class="block bg-white text-center
                          border border-blue-600 text-blue-600
                          hover:bg-blue-50
                          py-3 rounded-xl font-semibold transition">
                    ← Tiếp tục mua sắm
                </a>

                <!-- DANH SÁCH -->
                <div class="bg-white rounded-xl shadow overflow-hidden">

                    <!-- HEADER BẢNG (STICKY) -->
                    <div class="grid grid-cols-[40px_3fr_120px_120px_140px_140px_60px] gap-3 px-5 py-4 text-sm font-semibold bg-gray-50 border-b min-w-[900px] sticky top-0 z-20">
                        <div></div>
                        <div>Sản phẩm</div>
                        <div class="text-center">Size</div>
                        <div class="text-center">Đơn giá</div>
                        <div class="text-center">Số lượng</div>
                        <div class="text-right">Số tiền</div>
                        <div class="text-center">Xóa</div>
                    </div>


                    <!-- ITEMS -->
                    <div class="overflow-x-auto">
                        <div class="min-w-[900px] divide-y">

                            @foreach (var item in Model.CHI_TIET_GIO_HANG)
                            {
                                var giaSize = item.SAN_PHAM.SAN_PHAM_SIZE
                                    .FirstOrDefault(x => x.size_id == item.size_id)?.gia ?? 0;

                                decimal thanhTien = giaSize * (item.so_luong ?? 1);
                                string imagePath = "~/Image/Image_DoUong/" + item.SAN_PHAM.hinh_anh;

                                <input type="hidden" name="ItemIds" value="@item.id" />

                                <div class="grid grid-cols-[40px_3fr_120px_120px_140px_140px_60px]
                                            gap-3 px-5 py-4 items-center text-sm">

                                    <!-- CHECK -->
                                    <div class="text-center">
                                        <input type="checkbox"
                                               name="selectedIds"
                                               value="@item.id"
                                               @(selectedIds.Contains(item.id) ? "checked" : "")
                                               onchange="this.form.submit()"
                                               class="w-5 h-5 accent-blue-600" />
                                    </div>

                                    <!-- SẢN PHẨM -->
                                    <div class="flex gap-3 items-center">
                                        <img src="@Url.Content(imagePath)"
                                             class="w-16 h-16 object-cover rounded border bg-gray-50" />
                                        <span class="font-medium line-clamp-2">
                                            @item.SAN_PHAM.ten_san_pham
                                        </span>
                                    </div>

                                    <!-- SIZE -->
                                    <div class="text-center">
                                        <select name="SizeIds"
                                                onchange="this.form.submit()"
                                                class="border rounded px-2 py-1 w-20">
                                            @foreach (var s in item.SAN_PHAM.SAN_PHAM_SIZE)
                                            {
                                                <option value="@s.size_id"
                                                        @(s.size_id == item.size_id ? "selected" : "")>
                                                    @s.SIZE.ten_size
                                                </option>
                                            }
                                        </select>
                                    </div>

                                    <!-- ĐƠN GIÁ -->
                                    <div class="text-center">
                                        @giaSize.ToString("N0") đ
                                    </div>

                                    <!-- SỐ LƯỢNG -->
                                    <div class="text-center">
                                        <input type="number"
                                               name="Quantities"
                                               min="1"
                                               value="@item.so_luong"
                                               onchange="this.form.submit()"
                                               class="w-20 border rounded text-center py-1" />
                                    </div>

                                    <!-- SỐ TIỀN -->
                                    <div class="text-right font-semibold text-red-600">
                                        @thanhTien.ToString("N0") đ
                                    </div>

                                    <!-- XÓA -->
                                    <div class="text-center">
                                        <a href="@Url.Action("Xoa", "GIO_HANG", new { id = item.id })"
                                           onclick="return confirm('Xóa sản phẩm này?')"
                                           class="text-gray-400 hover:text-red-600">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- FOOTER FIXED -->
        <div class="bg-white border-t shadow px-6 py-4">
            <div class="max-w-7xl mx-auto flex items-center justify-between">

                <!-- THÔNG TIN TỔNG -->
                <div class="text-lg font-semibold space-y-1">
                    <div>
                        Tổng sản phẩm mua:
                        <span class="text-red-800 font-bold">
                            @ViewBag.TongSoLuong
                        </span>
                    </div>

                    <div>
                        Tổng thanh toán:
                        <span class="text-red-600">
                            @(((decimal)ViewBag.TongTien).ToString("N0")) đ
                        </span>
                    </div>
                </div>

                <!-- NÚT MUA HÀNG -->
                <button type="submit"
                        formaction="@Url.Action("ThanhToan", "DON_HANG")"
                        formmethod="post"
                        class="bg-blue-600 hover:bg-blue-700
                       text-white px-10 py-3 rounded-xl font-semibold">
                    Mua hàng
                </button>
            </div>
        </div>


    </div>
    }
</body>
</html>
